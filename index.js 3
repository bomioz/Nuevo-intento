const { Client, GatewayIntentBits } = require('discord.js');
const dotenv = require('dotenv');
const connectBots = require('./bots/connect');

dotenv.config();

const client = new Client({
  intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent]
});

client.once('ready', () => {
  console.log('Bot listo âœ…');
});

client.on('messageCreate', async (message) => {
  if (message.author.bot) return;

  if (message.content === '!ping') {
    message.reply('Â¡Estoy vivo! ðŸŸ¢');
  }

  if (message.content.startsWith('!bots')) {
    const args = message.content.split(' ');
    if (args.length < 3) {
      return message.reply('Uso correcto: `!bots <regiÃ³n> <cÃ³digoParty> <cantidad>`');
    }

    const region = args[1];
    const partyCode = args[2];
    const amount = parseInt(args[3]) || 1;

    message.reply(`Conectando ${amount} bots a la party ${partyCode} en la regiÃ³n ${region}...`);
    connectBots(region, partyCode, amount);
  }
});

client.login(process.env.DISCORD_TOKEN);
