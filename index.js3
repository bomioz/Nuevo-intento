require('dotenv').config();
const { Client, GatewayIntentBits } = require('discord.js');
const AgarioClient = require('./agario-client');

const client = new Client({
  intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent]
});

const BOT_TOKEN = process.env.DISCORD_TOKEN;

client.once('ready', () => {
  console.log(`ü§ñ Bot listo como ${client.user.tag}`);
});

client.login(BOT_TOKEN);
client.on('messageCreate', async (message) => {
  // Ignora mensajes del propio bot
  if (message.author.bot) return;

  // Verifica que el mensaje comience con !bots
  if (message.content.startsWith('!bots')) {
    const partes = message.content.split(' ');
    if (partes.length < 4) {
      return message.reply('‚ùó Uso: `!bots <codigo_party> <regi√≥n> <acci√≥n>`');
    }

    const codigoParty = partes[1];
    const region = partes[2];
    const accion = partes[3];

    message.reply(`üß† Conectando bots a la regi√≥n **${region}** con c√≥digo **${codigoParty}**, acci√≥n: **${accion}**`);

    // Aqu√≠ es donde se llamar√° al cliente de Agar.io
    const bot = new AgarioClient();
    bot.connect(region, codigoParty);

    // Ejecuta la acci√≥n pedida
    if (accion === 'seguirme') {
      bot.followPlayer('ID-DE-EJEMPLO'); // Aqu√≠ ir√≠a tu ID o l√≥gica real
    } else if (accion === 'split') {
      bot.split();
    } else if (accion === 'feed') {
      bot.feed();
    } else {
      message.reply('‚ùì Acci√≥n no reconocida. Usa: seguirme, split o feed.');
    }
  }
});
